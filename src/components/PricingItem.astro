---
const { title, prefix, price, per, subtitle, badge, points } = Astro.props;
---

<div
  class="relative flex flex-col rounded-2xl border border-zinc-200 bg-white p-8 shadow-sm"
>
  <div class="flex-1">
    <h3 class="text-xl font-semibold text-zinc-900">{title}</h3>

    {
      badge && (
        <p class="absolute top-0 -translate-y-1/2 transform rounded-full bg-red-700 py-1.5 px-4 text-sm font-semibold text-white">
          {badge}
        </p>
      )
    }
    <p class="mt-4 flex items-baseline text-zinc-900">
      {prefix && <span class="ml-1 mr-2 text-xl font-semibold">{prefix}</span>}
      <span class="text-5xl font-bold tracking-tight">{price}</span>
      <span class="ml-1 text-xl font-semibold">/{per}</span>
    </p>
    <p class="mt-6 text-zinc-500">
      {subtitle}
    </p>

    <!-- Feature list -->
    <ul role="list" class="mt-6 space-y-6">
      {
        points?.map((item) => (
          <li class="flex">
            <svg
              class="h-6 w-6 flex-shrink-0 text-red-700"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4.5 12.75l6 6 9-13.5"
              />
            </svg>
            <span class="ml-3 text-zinc-500">{item}</span>
          </li>
        ))
      }
    </ul>
  </div>

  <a
    href="#"
    class="mt-8 block w-full rounded-md border border-transparent bg-red-700 py-3 px-6 text-center font-medium text-white hover:bg-rose-600"
    >Rezervovat</a
  >
</div>
