---
import { useStoryblokApi } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import Nav from "../../components/Nav";
import Layout from "../../layouts/Layout.astro";

const storyblokApi = useStoryblokApi();
const { data } = await storyblokApi.get("cdn/stories/home", {
  version: "draft",
});

const story = data.story;
---

<Layout title="Home">
  <div class="relative bg-gray-50 px-6 pt-16 pb-20 lg:px-8 lg:pt-24 lg:pb-28">
    <div class="absolute inset-0">
      <div class="h-1/3 bg-white sm:h-2/3"></div>
    </div>
    <div class="relative mx-auto max-w-7xl">
      <a
        href="/"
        class="mb-4 flex w-fit items-center justify-center gap-2 rounded-full bg-black px-4 py-2"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="h-4 w-4 text-white"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 19.5L8.25 12l7.5-7.5"></path>
        </svg>
        <span class="font-bold text-white">Zpět</span></a
      >
      <div class="text-center">
        <h1 class="text-5xl font-bold uppercase tracking-tight sm:text-6xl">
          Pod Činkou Blog
        </h1>
        <p class="mx-auto mt-3 max-w-2xl text-xl text-gray-500 sm:mt-4"></p>
      </div>
      <StoryblokComponent blok={story.content} />
    </div>
  </div>
</Layout>
